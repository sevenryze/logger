{
  "name": "@polarrco/logger",
  "version": "0.1.9",
  "private": false,
  "main": "index.js",
  "files": [
    "dist/",
    "typings/",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p .",
    "watch": "tsc -w --incremental -p .",
    "test": "jest --bail --runInBand",
    "test:coverage": "jest -w=7 --ci --bail --coverage",
    "test:only-unit": "jest --bail --testNamePattern=\"Unit:\"",
    "test:only-integration": "jest --bail --testNamePattern=\"Integration:\"",
    "test:only-e2e": "jest --bail --testNamePattern=\"E2E:\"",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint --fix \"{lib,test}/**/*.ts\" --quiet",
    "prerelease": "npm run build && npm test",
    "release": "release-it"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "towerflow": {
    "type": "node-lib"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "express": "^4.17.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.11.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "reflect-metadata": "^0.1.13"
  },
  "dependencies": {
    "@polarrco/mediator": "github:Polarrco/mediator#0.1.1",
    "@polarrco/ruid": "github:Polarrco/ruid#1.4.1",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.7.1",
    "aws-sdk": "^2.974.0",
    "fs-extra": "^10.0.0",
    "rxjs": "^7.3.0",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^3.0.1",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
