{
  "name": "@Polarrco/logger",
  "version": "0.1.8",
  "private": false,
  "main": "index.js",
  "files": [
    "dist/",
    "typings/",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p .",
    "watch": "tsc -w --incremental -p .",
    "test": "jest --bail --runInBand",
    "test:coverage": "jest -w=7 --ci --bail --coverage",
    "test:only-unit": "jest --bail --testNamePattern=\"Unit:\"",
    "test:only-integration": "jest --bail --testNamePattern=\"Integration:\"",
    "test:only-e2e": "jest --bail --testNamePattern=\"E2E:\"",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint --fix \"{lib,test}/**/*.ts\" --quiet",
    "prerelease": "npm run build && npm test",
    "release": "release-it"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "towerflow": {
    "type": "node-lib"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@nestjs/common": "^7.6.11",
    "@nestjs/core": "^7.6.11",
    "@nestjs/platform-express": "^7.6.11",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.3.0",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "reflect-metadata": "^0.1.13"
  },
  "dependencies": {
    "@sevenryze/mediator": "^5.3.0",
    "@sevenryze/ruid": "^1.4.0",
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^14.14.24",
    "aws-sdk": "^2.836.0",
    "fs-extra": "^9.1.0",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.5.0",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
